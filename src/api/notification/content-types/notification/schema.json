{
  "kind": "collectionType",
  "collectionName": "notifications",
  "info": {
    "singularName": "notification",
    "pluralName": "notifications",
    "displayName": "Notification",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "message": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "System_Announcement",
        "Registration_Reminder",
        "Activity_Update",
        "Room_Matching",
        "Emergency_Notice"
      ]
    },
    "notification_status": {
      "type": "enumeration",
      "enum": [
        "Pending",
        "Sent",
        "Failed"
      ]
    },
    "target_users": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::employee.employee",
      "inversedBy": "target_users_employees"
    },
    "send_time": {
      "type": "datetime"
    },
    "is_read": {
      "type": "boolean",
      "default": false
    },
    "priority": {
      "type": "enumeration",
      "enum": [
        "High",
        "Normal",
        "Low"
      ]
    }
  }
}
